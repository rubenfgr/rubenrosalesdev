{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "noEmit": true,
    "types": ["jest"],
    "paths": {

      "~/*": ["./src/*"],
      "@/shared/*": ["./app/shared/*"  ],
      /* Server Alias */
      "@/database": ["./app/server/database"],
      "@/entities/*": ["./app/server/database/entities/*"],
      /* Client Alias */
      "@/client/*": ["./app/client/*"],
      "@/components/*": ["./app/client/components/*"],
      "@/hooks/*": ["./app/client/hooks/*"],
      "@/pages/*": ["./app/client/pages/*"],
      "@/services/*": ["./app/client/services/*"],
      "@/styles/*": ["./app/client/styles/*"]
    }
  }
}
