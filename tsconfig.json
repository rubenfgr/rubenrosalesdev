{
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "noEmit": true,
    "types": [
      "jest"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      /* Server Alias */
      "@/server/*": [
        "./src/server/*"
      ],
      /* Client Alias */
      "@/client/*": [
        "./src/client/*"
      ],
      "@/components/*": [
        "./src/client/components/*"
      ],
      "@/hooks/*": [
        "./src/client/hooks/*"
      ],
      "@/pages/*": [
        "./src/client/pages/*"
      ],
      "@/services/*": [
        "./src/client/services/*"
      ],
      "@/styles/*": [
        "./src/client/styles/*"
      ]
    }
  }
}
