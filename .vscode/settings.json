{
  // File exclusions for watcher and search
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true // Ignore generated file
  },
  "search.exclude": {
    "**/routeTree.gen.ts": true // Exclude from search
  },
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true // Set as read-only file
  },
  // Custom chat configuration paths
  "chat.modeFilesLocations": {
    ".copilot/chatmodes": true // Chat modes location
  },
  "chat.promptFilesLocations": {
    ".copilot/prompts": true // Prompts location
  },
  "chat.instructionsFilesLocations": {
    ".copilot/instructions": true // Instructions location
  },
  // File formatting rules
  "files.eol": "\n", // Unix-style end of line
  "files.insertFinalNewline": true, // Insert final newline
  "files.trimTrailingWhitespace": true, // Remove trailing whitespace
  // Markdown-specific configuration
  "[markdown]": {
    "files.trimTrailingWhitespace": false, // Keep trailing whitespace in Markdown
    "editor.formatOnSave": true // Format on save
  },
  // Visual ruler for line width
  "editor.rulers": [
    100 // Show guide at column 100
  ],
  // File associations for custom types
  "files.associations": {
    "*.chatmode.md": "markdown", // Treat chatmode files as markdown
    "*.instructions.md": "markdown", // Treat instructions files as markdown
    "*.prompt.md": "markdown" // Treat prompt files as markdown
  },
  // Default formatter and format on save
  "editor.defaultFormatter": "biomejs.biome", // Use Biome as main formatter
  "editor.formatOnSave": true, // Format on save
  // Disable other formatters/linters
  "eslint.enable": false, // Disable ESLint
  "prettier.enable": false, // Disable Prettier
  // Language-specific configuration
  "[json]": {
    "editor.formatOnPaste": true, // Format on paste
    "editor.formatOnSave": true, // Format on save
    "editor.defaultFormatter": "biomejs.biome" // Use Biome
  },
  "[typescript]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  // Automatic code actions on save
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit", // Biome quick fixes
    "source.organizeImports.biome": "explicit", // Organize imports with Biome
    "source.fixAll.biome": "explicit" // Apply all Biome fixes
  },
  // Formatter for JSON with comments and CSS
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  }
}
